<Window x:Class="NTRCalendarWPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calendar" DataContext="{StaticResource CalendarViewModel}" MinWidth="960" MinHeight="300"
        Background="White" Width="960" Height="300">


    <Grid ShowGridLines="True" TextElement.FontFamily="Courier New" TextElement.FontSize="14">

        <Grid.Resources>
            <Style TargetType="TextElement">
                <Setter Property="FontFamily" Value="Courier New" />
                <Setter Property="FontSize" Value="14" />
            </Style>

            <Style TargetType="Button">
                <Setter Property="Margin" Value="5,5,5,5" />
                <Setter Property="Background" Value="#CBE5E5" />
                <Setter Property="BorderThickness" Value="0" />

                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="Margin" Value="5,5,5,5" />
                <Setter Property="Background" Value="#FFCBCBE8" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="60" MaxWidth="100" />
            <ColumnDefinition MinWidth="100" />
            <ColumnDefinition MinWidth="100" />
            <ColumnDefinition MinWidth="100" />
            <ColumnDefinition MinWidth="100" />
            <ColumnDefinition MinWidth="100" />
            <ColumnDefinition MinWidth="100" />
            <ColumnDefinition MinWidth="100" />
            <ColumnDefinition MinWidth="60" MaxWidth="100" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition MinHeight="30" MaxHeight="40" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition MinHeight="30" MaxHeight="40" />
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Command="{Binding CommandPrevious}">prev</Button>
        <Button Grid.Column="8" Grid.Row="0" Command="{Binding CommandPrevious}">prev</Button>
        <Button Grid.Column="0" Grid.Row="5" Command="{Binding CommandNext}">next</Button>
        <Button Grid.Column="8" Grid.Row="5" Command="{Binding CommandNext}">next</Button>

        <Label Grid.Column="1" Grid.Row="0" Content="Monday" />
        <Label Grid.Column="2" Grid.Row="0" Content="Tuesday" />
        <Label Grid.Column="3" Grid.Row="0" Content="Wednesday" />
        <Label Grid.Column="4" Grid.Row="0" Content="Thursday" />
        <Label Grid.Column="5" Grid.Row="0" Content="Friday" />
        <Label Grid.Column="6" Grid.Row="0" Content="Saturday" />
        <Label Grid.Column="7" Grid.Row="0" Content="Sunday" />

        <Label Grid.Column="1" Grid.Row="5" Content="Monday" />
        <Label Grid.Column="2" Grid.Row="5" Content="Tuesday" />
        <Label Grid.Column="3" Grid.Row="5" Content="Wednesday" />
        <Label Grid.Column="4" Grid.Row="5" Content="Thursday" />
        <Label Grid.Column="5" Grid.Row="5" Content="Friday" />
        <Label Grid.Column="6" Grid.Row="5" Content="Saturday" />
        <Label Grid.Column="7" Grid.Row="5" Content="Sunday" />

        <Label Grid.Column="0" Grid.Row="1" Content="{Binding WeekField1}" />
        <Label Grid.Column="0" Grid.Row="2" Content="{Binding WeekField2}" />
        <Label Grid.Column="0" Grid.Row="3" Content="{Binding WeekField3}" />
        <Label Grid.Column="0" Grid.Row="4" Content="{Binding WeekField4}" />

        <Label Grid.Column="8" Grid.Row="1" Content="{Binding WeekField1}" />
        <Label Grid.Column="8" Grid.Row="2" Content="{Binding WeekField2}" />
        <Label Grid.Column="8" Grid.Row="3" Content="{Binding WeekField3}" />
        <Label Grid.Column="8" Grid.Row="4" Content="{Binding WeekField4}" />

    </Grid>
</Window>