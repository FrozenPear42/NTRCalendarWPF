<Window x:Class="NTRCalendarWPF.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:root="clr-namespace:NTRCalendarWPF"
        xmlns:view="clr-namespace:NTRCalendarWPF.View"
        xmlns:viewModel="clr-namespace:NTRCalendarWPF.ViewModel"
        Title="Calendar" MinWidth="960" MinHeight="300"
        Background="White" Width="1400" Height="500">

    <Window.DataContext>
        <viewModel:CalendarViewModel x:Name="CalendarViewModel"/>
    </Window.DataContext>
    
    <Grid TextElement.FontFamily="Courier New" TextElement.FontSize="14" TextElement.Foreground="#00008F">

        <Grid.Resources>
            <root:DayDateConverter x:Key="DayDateConverter" />

            <Style TargetType="Button">
                <Setter Property="Margin" Value="2" />
                <Setter Property="Background" Value="#CBE5E5" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
            </Style>

            <Style TargetType="Label">
                <Setter Property="Margin" Value="2" />
                <Setter Property="Background" Value="#FFCBCBE8" />
                <Setter Property="HorizontalAlignment" Value="Stretch" />
                <Setter Property="VerticalAlignment" Value="Stretch" />
                <Setter Property="HorizontalContentAlignment" Value="Center" />
                <Setter Property="VerticalContentAlignment" Value="Center" />
            </Style>

            <Style TargetType="view:DayPanel">
                <Setter Property="Margin" Value="2" />
                <Setter Property="EventsSource" Value="{Binding Events}"/>
                <Setter Property="AddEvent" Value="{Binding CommandAddEvent}"/>
                <Setter Property="EditEvent" Value="{Binding CommandEditEvent}"/>
            </Style>
            
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="60" Width="Auto" MaxWidth="100" />
            <ColumnDefinition MinWidth="100" />
            <ColumnDefinition MinWidth="100" />
            <ColumnDefinition MinWidth="100" />
            <ColumnDefinition MinWidth="100" />
            <ColumnDefinition MinWidth="100" />
            <ColumnDefinition MinWidth="100" />
            <ColumnDefinition MinWidth="100" />
            <ColumnDefinition MinWidth="60" Width="Auto" MaxWidth="100" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition MinHeight="30" MaxHeight="40" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition MinHeight="30" MaxHeight="40" />
        </Grid.RowDefinitions>

        <Button Grid.Column="0" Grid.Row="0" Command="{Binding CommandPrevious}">prev</Button>
        <Button Grid.Column="8" Grid.Row="0" Command="{Binding CommandPrevious}">prev</Button>
        <Button Grid.Column="0" Grid.Row="5" Command="{Binding CommandNext}">next</Button>
        <Button Grid.Column="8" Grid.Row="5" Command="{Binding CommandNext}">next</Button>

        <Label Grid.Column="1" Grid.Row="0" Content="Monday" />
        <Label Grid.Column="2" Grid.Row="0" Content="Tuesday" />
        <Label Grid.Column="3" Grid.Row="0" Content="Wednesday" />
        <Label Grid.Column="4" Grid.Row="0" Content="Thursday" />
        <Label Grid.Column="5" Grid.Row="0" Content="Friday" />
        <Label Grid.Column="6" Grid.Row="0" Content="Saturday" />
        <Label Grid.Column="7" Grid.Row="0" Content="Sunday" />

        <Label Grid.Column="1" Grid.Row="5" Content="Monday" />
        <Label Grid.Column="2" Grid.Row="5" Content="Tuesday" />
        <Label Grid.Column="3" Grid.Row="5" Content="Wednesday" />
        <Label Grid.Column="4" Grid.Row="5" Content="Thursday" />
        <Label Grid.Column="5" Grid.Row="5" Content="Friday" />
        <Label Grid.Column="6" Grid.Row="5" Content="Saturday" />
        <Label Grid.Column="7" Grid.Row="5" Content="Sunday" />

        <Label Grid.Column="0" Grid.Row="1" Content="{Binding WeekFields[0]}" />
        <Label Grid.Column="0" Grid.Row="2" Content="{Binding WeekFields[1]}" />
        <Label Grid.Column="0" Grid.Row="3" Content="{Binding WeekFields[2]}" />
        <Label Grid.Column="0" Grid.Row="4" Content="{Binding WeekFields[3]}" />

        <Label Grid.Column="8" Grid.Row="1" Content="{Binding WeekFields[0]}" />
        <Label Grid.Column="8" Grid.Row="2" Content="{Binding WeekFields[1]}" />
        <Label Grid.Column="8" Grid.Row="3" Content="{Binding WeekFields[2]}" />
        <Label Grid.Column="8" Grid.Row="4" Content="{Binding WeekFields[3]}" />

        <view:DayPanel Grid.Column="1" Grid.Row="1" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=0}"/>
        <view:DayPanel Grid.Column="2" Grid.Row="1" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=1}"/>
        <view:DayPanel Grid.Column="3" Grid.Row="1" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=2}"/>
        <view:DayPanel Grid.Column="4" Grid.Row="1" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=3}"/>
        <view:DayPanel Grid.Column="5" Grid.Row="1" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=4}"/>
        <view:DayPanel Grid.Column="6" Grid.Row="1" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=5}"/>
        <view:DayPanel Grid.Column="7" Grid.Row="1" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=6}"/>
       
        <view:DayPanel Grid.Column="1" Grid.Row="2" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=7}"/>
        <view:DayPanel Grid.Column="2" Grid.Row="2" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=8}"/>
        <view:DayPanel Grid.Column="3" Grid.Row="2" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=9}"/>
        <view:DayPanel Grid.Column="4" Grid.Row="2" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=10}"/>
        <view:DayPanel Grid.Column="5" Grid.Row="2" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=11}"/>
        <view:DayPanel Grid.Column="6" Grid.Row="2" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=12}"/>
        <view:DayPanel Grid.Column="7" Grid.Row="2" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=13}"/>

        <view:DayPanel Grid.Column="1" Grid.Row="3" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=14}"/>
        <view:DayPanel Grid.Column="2" Grid.Row="3" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=15}"/>
        <view:DayPanel Grid.Column="3" Grid.Row="3" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=16}"/>
        <view:DayPanel Grid.Column="4" Grid.Row="3" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=17}"/>
        <view:DayPanel Grid.Column="5" Grid.Row="3" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=18}"/>
        <view:DayPanel Grid.Column="6" Grid.Row="3" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=19}"/>
        <view:DayPanel Grid.Column="7" Grid.Row="3" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=20}"/>

        <view:DayPanel Grid.Column="1" Grid.Row="4" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=21}"/>
        <view:DayPanel Grid.Column="2" Grid.Row="4" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=22}"/>
        <view:DayPanel Grid.Column="3" Grid.Row="4" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=23}"/>
        <view:DayPanel Grid.Column="4" Grid.Row="4" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=24}"/>
        <view:DayPanel Grid.Column="5" Grid.Row="4" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=25}"/>
        <view:DayPanel Grid.Column="6" Grid.Row="4" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=26}"/>
        <view:DayPanel Grid.Column="7" Grid.Row="4" Day="{Binding FirstDay, Converter={StaticResource DayDateConverter}, ConverterParameter=27}"/>

    </Grid>
</Window>